{% extends 'base.rooms.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="register">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Register</h1>

                    {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.mobile_nr) }}
                    {{ form_row(registrationForm.first_name) }}
                    {{ form_row(registrationForm.insertion_name) }}
                    {{ form_row(registrationForm.last_name) }}
                    {{ form_row(registrationForm.adress) }}
                    {{ form_row(registrationForm.zip) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.country) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn btn-primary">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
