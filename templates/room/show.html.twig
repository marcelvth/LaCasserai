{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Room_nr</th>
                <td>{{ room.RoomNr }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ room.Price }}</td>
            </tr>
            <tr>
                <th>Bed</th>
                <td>{{ room.Bed }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.Description }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ room.available ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.Name }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ room.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ room.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
