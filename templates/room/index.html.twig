{% extends 'base.rooms.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room_nr</th>
                <th>Price</th>
                <th>Bed</th>
                <th>Description</th>
                <th>Available</th>
                <th>Name</th>
                <th>Image_name</th>
                <th>Image_size</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.RoomNr }}</td>
                <td>{{ room.Price }}</td>
                <td>{{ room.Bed }}</td>
                <td>{{ room.Description }}</td>
                <td>{{ room.available ? 'Yes' : 'No' }}</td>
                <td>{{ room.Name }}</td>
                <td>{{ room.ImageName }}</td>
                <td>{{ room.ImageSize }}</td>
                <td>{{ room.createdAt ? room.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ room.updatedAt ? room.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
